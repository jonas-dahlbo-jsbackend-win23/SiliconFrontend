<header>
    <div class="container">
        <a href="/"><img class="logo" src="/images/logo.svg" alt="Silicon Logo"></a>
        <div id="menu" class="hide">
            <nav>
                <NavLink class="menu-link" href="" Match="NavLinkMatch.All">Overview</NavLink>
                <NavLink class="menu-link" href="#features">Features</NavLink>
                <AuthorizeView>
                    <Authorized>
                        <NavLink class="menu-link" href="/courses">Courses</NavLink>
                    </Authorized>
                </AuthorizeView>
                <NavLink class="menu-link" href="/contact">Contact</NavLink>
            </nav>
        </div>

        <div class="btn-switch">
            <label>Light</label>
            <label class="switch" for="switch-mode">
                <input type="checkbox" id="switch-mode" />
                <span class="slider round"></span>
            </label>
            <label>Dark</label>
        </div>

        <div id="account-buttons" class="hide">

            <AuthorizeView>
                <Authorized>
                    <a href="/Account"><img src="/images/profile-mini.svg"></a>
                </Authorized>
                <NotAuthorized>
                    <a class="gray-btn" href="/signin"><img src="/images/icons/sign-in.svg"><span>Sign in</span></a>
                    <a class="theme-btn" href="/signup"><img src="/images/icons/sign-up.svg"><span>Sign up</span></a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</header>


